{
	"name": "lavamusic",
	"version": "4.7.0",
	"description": "LavaMusic is a music bot for Discord, written in JavaScript using the Discord.js, Typescript, lavalink-client (Lavalink) library.",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsup --watch --onSuccess=\"dotenvx run -- node dist/index.js\"",
		"start": "dotenvx run -- node dist/index.js",
		"db:push": "npx prisma db push",
		"db:migrate": "npx prisma migrate dev --name init",
		"build": "tsup",
		"lint": "biome check",
		"format": "biome format --write"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/appujet/lavamusic.git"
	},
	"keywords": [
		"discord",
		"music",
		"bot",
		"lavalink",
		"lavalink-client",
		"lavamusic",
		"typescript",
		"prisma"
	],
	"author": "appujet",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/appujet/lavamusic/issues"
	},
	"homepage": "https://github.com/appujet/lavamusic#readme",
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@swc/core": "^1.15.3",
		"@types/i18n": "^0.13.12",
		"@types/node": "^24.10.1",
		"@types/signale": "^1.4.7",
		"prisma": "^7.1.0",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.51.1",
		"@prisma/client": "^7.1.0",
		"@top-gg/sdk": "^3.1.6",
		"discord.js": "^14.25.1",
		"genius-lyrics-api": "^3.2.1",
		"i18n": "^0.15.3",
		"lavalink-client": "^2.7.2",
		"node-system-stats": "^2.0.5",
		"signale": "^1.4.0",
		"topgg-autoposter": "^2.0.2",
		"tslib": "^2.8.1",
		"undici": "^7.16.0",
		"zod": "^4.1.13"
	},
	"signale": {
		"displayScope": true,
		"displayBadge": true,
		"displayDate": true,
		"displayFilename": true,
		"displayLabel": true,
		"displayTimestamp": true,
		"underlineLabel": true
	}
}
